<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head', {title: 'INDEX', css:["/css/style-index.css"]})
  %>

  <body>
    <%- include('./partials/header') %>

    <main>
      <!-- CARRUSEL DE PRODUCTOS -->
      <!-- CAROUSEL - https://www.w3schools.com/howto/howto_js_slideshow.asp -->
      <div class="container-main-carousel">
        <!-- Full-width images with number and caption text -->
        <div class="mySlides fade">
          <div class="numbertext">1 / 4</div>
          <img
            src="/images/product/SMART-TV-1.jpg"
            style="width: 100%"
            alt="SMART-TV-1"
          />
          <div class="text">SMART-TV-1</div>
        </div>

        <div class="mySlides fade">
          <div class="numbertext">2 / 4</div>
          <img
            src="/images/SOUNDBAR-1.jpg"
            style="width: 100%"
            alt="SOUNDBAR-1"
          />
          <div class="text">SOUNDBAR-1</div>
        </div>

        <div class="mySlides fade">
          <div class="numbertext">3 / 4</div>
          <img
            src="/images/HOME-THEATER-1.jpg"
            style="width: 100%"
            alt="HOME-THEATER-1"
          />
          <div class="text">HOME-THEATER-1</div>
        </div>

        <div class="mySlides fade">
          <div class="numbertext">4 / 4</div>
          <img
            src="/images/PROYECTOR-1.jpg"
            style="width: 100%"
            alt="PROYECTOR-1"
          />
          <div class="text">PROYECTOR-1</div>
        </div>

        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
      </div>
      <br />

      <!-- The dots/circles -->
      <div style="text-align: center">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
        <span class="dot" onclick="currentSlide(4)"></span>
      </div>
      <!-- CAROUSEL - https://www.w3schools.com/howto/howto_js_slideshow.asp -->

      <!-- LOGOS DE CONDICIONES -->
      <div class="container-main-logos">
        <div class="child-main-logos">
          <i class="fa-solid fa-truck-fast"></i>
          <p class="main-logos-p">Envío gratis en todos los productos</p>
        </div>

        <div class="child-main-logos">
          <i class="fa-solid fa-globe"></i>
          <p class="main-logos-p">Seguimiento en línea</p>
        </div>

        <div class="child-main-logos">
          <i class="fa-regular fa-credit-card"></i>
          <p class="main-logos-p">
            Hasta 12 cuotas sin interés en productos seleccionados
          </p>
        </div>

        <div class="child-main-logos">
          <i class="fa-solid fa-phone-volume"></i>
          <p class="main-logos-p">Venta telefónica</p>
          <p class="main-logos-p-bold">01-810-000-SMART</p>
        </div>
      </div>

      <!-- CONTAINER DE PRODUCTOS -->
      <div class="container-main-products">
        <div class="child-main-products">
          <!-- <i class="fa-solid fa-tv"></i> -->
          <img src="/images/product/SMART-TV-1.jpg" alt="SMART-TV-1" />
          <p class="main-products-p">Producto 1</p>
        </div>

        <div class="child-main-products">
          <!-- <i class="fa-solid fa-tv"></i> -->
          <img src="/images/SOUNDBAR-1.jpg" alt="SOUNDBAR-1" />
          <p class="main-products-p">Producto 2</p>
        </div>

        <div class="child-main-products">
          <!-- <i class="fa-solid fa-tv"></i> -->
          <img src="/images/HOME-THEATER-1.jpg" alt="HOME-THEATER-1" />
          <p class="main-products-p">Producto 3</p>
        </div>

        <div class="child-main-products">
          <!-- <i class="fa-solid fa-tv"></i> -->
          <img src="/images/PROYECTOR-1.jpg" alt="PROYECTOR-1" />
          <p class="main-products-p">Producto 4</p>
        </div>
      </div>
    </main>

    <%- include('./partials/footer') %>

    <!-- SCRIPT DE https://www.w3schools.com/howto/howto_js_slideshow.asp -->

    <script>
      let slideIndex = 1;
      showSlides(slideIndex);

      // Next/previous controls
      function plusSlides(n) {
        showSlides((slideIndex += n));
      }

      // Thumbnail image controls
      function currentSlide(n) {
        showSlides((slideIndex = n));
      }

      function showSlides(n) {
        let i;
        let slides = document.getElementsByClassName("mySlides");
        let dots = document.getElementsByClassName("dot");
        if (n > slides.length) {
          slideIndex = 1;
        }
        if (n < 1) {
          slideIndex = slides.length;
        }
        for (i = 0; i < slides.length; i++) {
          slides[i].style.display = "none";
        }
        for (i = 0; i < dots.length; i++) {
          dots[i].className = dots[i].className.replace(" active", "");
        }
        slides[slideIndex - 1].style.display = "block";
        dots[slideIndex - 1].className += " active";
      }
    </script>
  </body>
</html>
